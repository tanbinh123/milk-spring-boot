<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.neu.yang.mapper.GoodsMapper">
    <select id="screenGoods" parameterType="com.neu.yang.dto.Selected" resultType="com.neu.yang.model.Goods">
        select * from goods where
        is_delete=0
        and parent_type=#{parentType}
        and brand=#{brand}
            <if test="type!=null and type!=''">
                and type=#{type}
            </if>
            <if test="packager!=null and packager!=''">
                and packager=#{packager}
            </if>
            <if test="size=='299'.toString()">
                and <![CDATA[size<=#{size}]]>
            </if>
        <if test="size=='499'.toString()">
            and <![CDATA[size<=#{size}]]>
            and <![CDATA[size>299]]>
        </if>
        <if test="size=='500'.toString()">
            and <![CDATA[size>=500]]>
        </if>
    </select>

</mapper>
